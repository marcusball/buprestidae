<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Blog</title>

        {{> common/header }}
    </head>

    <body>
        <div class="container">
            <div class="row">
                <h1>Hello</h1>

                {{#each posts}}
                <article>
                    <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
                    <div>
                        {{{body}}}
                    </div>
                </article>
                {{/each}}
            </div>
        </div>
    </body>

    {{> common/footer }}
</html>