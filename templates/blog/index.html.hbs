<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Blog</title>

        {{> common/meta/header }}
    </head>

    <body>
        <div class="container">
            <div id="main-header" class="row">
                <h1>Hello</h1>
            </div>

            <nav class="row">
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/blog">Blog</a></li>
                    <li><a href="#">Hire me</a></li>
                    <li><a href="#">Contact</a></li>                                          
                </ul>
            </nav>

            <div class="row">
                {{#each posts}}
                <article>
                    <h2 class="post-title"><a href="{{url}}">{{title}}</a></h2>
                    <div>
                        {{{body}}}
                    </div>
                </article>
                {{/each}}
            </div>
        </div>
    </body>

    {{> common/meta/footer }}
</html>